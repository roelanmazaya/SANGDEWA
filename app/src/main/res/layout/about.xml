<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogParent"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/btnSpinAndWinRedeem"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:src="@drawable/close" />

        <View
            android:layout_marginRight="20dp"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:background="#BFFFFFFF" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:gravity="center"
        app:cardBackgroundColor="@color/whiteCardColor"
        app:cardCornerRadius="16dp">

        <LinearLayout
           
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/spls" />

            <TextView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Copyright (c) BakulApp.com"
                android:textColor="@color/colorPrimary"
                android:textSize="11dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="Berbasis Android"
                android:textColor="@color/colorPrimary"
                android:textSize="9dp"
                android:textStyle="normal" />

            <TextView
                android:layout_marginBottom="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="V.2.1.0"
                android:textSize="8dp"
                android:textStyle="normal" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>