<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogParent"
    android:layout_width="380dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/btnSpinAndWinRedeem"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:src="@drawable/close" />

        <View
            android:layout_marginRight="20dp"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:background="#BFFFFFFF" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="230dp"
        android:elevation="10dp"
        android:gravity="center"
        app:cardBackgroundColor="@color/whiteCardColor"
        app:cardCornerRadius="11dp">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/maintenance"
            android:orientation="vertical">

            <com.example.sangdewa.customfonts.GoMytext
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="10dp"
                android:text="Under \nConstruction"
                android:textColor="#03A9F4"
                android:textSize="17dp"
                android:textStyle="bold" />

